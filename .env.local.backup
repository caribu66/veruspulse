# VerusCoin Explorer Configuration Example
# Copy this to .env.local for development

# VerusCoin Daemon Configuration
VERUS_RPC_HOST=http://192.168.86.89:18843
VERUS_RPC_USER=verus
VERUS_RPC_PASSWORD=verus
VERUS_RPC_TIMEOUT=15000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/verus_explorer
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=verus
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_BASE_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/verus-explorer.log

# Cache Configuration
CACHE_TTL=300
BLOCK_CACHE_TTL=3600
TX_CACHE_TTL=1800

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
DAEMON_CHECK_INTERVAL=60000
DATABASE_URL=sqlite:./data/utxo.db
UTXO_DATABASE_ENABLED=true
DATABASE_URL=postgresql://verus_user:verus_secure_2024@localhost:5432/verus_utxo_db
UTXO_DATABASE_ENABLED=true
