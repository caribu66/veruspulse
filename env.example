# VerusCoin Daemon Configuration
VERUS_RPC_HOST=http://127.0.0.1:18843
VERUS_RPC_USER=verus
VERUS_RPC_PASSWORD=your_secure_password_here_min_32_chars
VERUS_RPC_TIMEOUT=10000

# ZMQ Configuration (for real-time blockchain updates)
# When daemon is local: tcp://127.0.0.1:28332
# When daemon is remote: tcp://REMOTE_IP:28332
# Works in both development and production
VERUS_ZMQ_ADDRESS=tcp://127.0.0.1:28332
ENABLE_ZMQ=true

# To disable ZMQ in development (saves ~100MB RAM):
# ENABLE_ZMQ=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3004

