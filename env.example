# Master encryption key (min 64 characters)
# Generate: openssl rand -base64 64
SECRETS_MASTER_KEY=1ng6uvLSuQd5IPGb8I0Oubrto51NYGn4yQQ8ZNRjKyMSlgwCxy6UGFPSE8HzvdCFl4uwfhMXH8CjJoONp1VoOQ==

# ========================================
# RATE LIMITING
# ========================================

# General API rate limiting
RATE_LIMIT_WINDOW_MS=900000          # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100          # Max requests per window

# Authentication endpoint rate limiting (stricter)
RATE_LIMIT_AUTH_WINDOW_MS=300000     # 5 minutes
RATE_LIMIT_AUTH_MAX_REQUESTS=20      # Max requests per window

# Enable rate limiting (true | false)
ENABLE_RATE_LIMITING=true

# ========================================
# CACHING STRATEGY (TTL in seconds)
# ========================================

# Enable caching globally
ENABLE_CACHE=true

# Cache TTL for different data types
CACHE_TTL_BLOCKCHAIN=30              # Blockchain info
CACHE_TTL_BLOCK=300                  # Individual blocks (5 min)
CACHE_TTL_TRANSACTION=120            # Transactions (2 min)
CACHE_TTL_ADDRESS=60                 # Address data
CACHE_TTL_MEMPOOL=10                 # Mempool data (fast refresh)
CACHE_TTL_NETWORK_INFO=30            # Network statistics
CACHE_TTL_VERUSID=300                # VerusID data

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Log level: error | warn | info | debug | verbose
LOG_LEVEL=info

# Log file location
LOG_FILE=logs/verus-explorer.log

# Enable structured logging (JSON format)
LOG_JSON=false

# ========================================
# PERFORMANCE & MONITORING
# ========================================

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable compression middleware
ENABLE_COMPRESSION=true

# Enable health checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60000          # Health check interval (ms)

# ========================================
# ERROR TRACKING (SENTRY)
# ========================================

# Sentry DSN for error tracking
# Get from: https://sentry.io
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Sentry environment tag
SENTRY_ENVIRONMENT=development

# Sample rate (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1

# ========================================
# DATABASE (SQLite for VerusID & Stakes)
# ========================================

# SQLite database paths (relative to project root)
DB_VERUSID_PATH=./data/verusid-comprehensive.db
DB_ANALYTICS_PATH=./data/analytics.db

# Optional: PostgreSQL for advanced features
# DATABASE_URL=postgresql://verus:password@localhost:5432/veruspulse

# ========================================
# OAUTH AUTHENTICATION (OPTIONAL)
# ========================================

# GitHub OAuth (for admin features)
# Create app: https://github.com/settings/developers
GITHUB_ID=your_github_oauth_app_id
GITHUB_SECRET=your_github_oauth_app_secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/callback

# ========================================
# SECURITY MONITORING & ALERTS
# ========================================

# Enable security monitoring
ENABLE_SECURITY_MONITORING=true

# Alert notifications
SECURITY_ALERT_EMAIL=admin@veruspulse.com
SECURITY_ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/disable features
ENABLE_PWA=true                      # Progressive Web App
ENABLE_I18N=true                     # Internationalization
ENABLE_ANALYTICS=true                # Usage analytics
ENABLE_DONATIONS=true                # Donation banner

# ========================================
# NEXT.JS SPECIFIC SETTINGS
# ========================================

# Analyze bundle size (set to 'true' to enable)
ANALYZE=false

# Enable source maps in production
NEXT_PUBLIC_SOURCE_MAPS=false

# Telemetry (Next.js usage data)
# Set to 1 to disable
NEXT_TELEMETRY_DISABLED=0

