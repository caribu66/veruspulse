# ============================================
# Verus Explorer - Production Environment
# ============================================
# Copy this to .env.production and update values
# ============================================

# VerusCoin Daemon Configuration
VERUS_RPC_HOST=http://192.168.1.102:18843
VERUS_RPC_USER=verus
VERUS_RPC_PASSWORD=your-verus-rpc-password-here
VERUS_RPC_TIMEOUT=15000

# ZMQ Configuration (Optional - for real-time updates)
VERUS_ZMQ_ADDRESS=tcp://127.0.0.1:28332
ENABLE_ZMQ=true

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://192.168.1.102:3000

# Performance & Caching
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true
ENABLE_PERFORMANCE_MONITORING=true

# Cache TTL Settings (seconds)
CACHE_TTL_BLOCKCHAIN=30
CACHE_TTL_BLOCK=300
CACHE_TTL_TRANSACTION=120
CACHE_TTL_ADDRESS=60
CACHE_TTL_MEMPOOL=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-32-chars-minimum

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL Configuration (Optional - for advanced features)
DATABASE_URL=

# Service Configuration
SERVICE_PORT=4001
SYNC_INTERVAL_MS=120000
NEXT_PUBLIC_VERUSID_SERVICE_URL=http://localhost:4001
VERUSID_SERVICE_URL=http://localhost:4001

# Performance Tuning
PG_POOL_MAX=10




