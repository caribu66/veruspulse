# ============================================================
# PERFORMANCE TUNING (Optimized for sync speed)
# ============================================================
# Database cache - More RAM = Faster sync
# Adjust based on your available RAM:
# - 4GB RAM system: dbcache=1024
# - 8GB RAM system: dbcache=2048
# - 16GB+ RAM system: dbcache=4096
dbcache=2048                        # 2GB cache (recommended)

# Memory pool
maxmempool=512                      # 512MB mempool

# CPU optimization
par=4                               # Parallel script verification (adjust to your CPU cores)
                                    # Use number of CPU cores - 1, or leave at 4 for safety

# Connection optimization
maxorphantx=100                     # Max orphan transactions
maxsendbuffer=8192                  # 8MB send buffer
maxreceivebuffer=8192               # 8MB receive buffer

# ============================================================
# NETWORK TIMEOUTS
# ============================================================
timeout=60000                       # 60 second connection timeout
maxtimeadjustment=3600              # Max time adjustment (1 hour)

# ============================================================
# MEMPOOL & RELAY SETTINGS
# ============================================================
minrelaytxfee=0.000001             # Minimum relay fee
blockmintxfee=0.000001             # Minimum fee for block inclusion
limitancestorcount=50              # Ancestor transaction limit
limitdescendantcount=50            # Descendant transaction limit

# ============================================================
# SYNC OPTIMIZATION
# ============================================================
checkblocks=288                     # Check last 288 blocks on startup
checklevel=3                        # Block verification level (0-4, 3 is good balance)

# ============================================================
# LOGGING (Minimal for production)
# ============================================================
shrinkdebugfile=1                   # Shrink debug.log on startup
logips=0                            # Don't log IP addresses

# Optional debug logging (uncomment if needed):
# debug=net                         # Network debug
# debug=mempool                     # Mempool debug
# debug=rpc                         # RPC debug
# printtoconsole=1                  # Print to console

# ============================================================
# BLOCKCHAIN INDEXING (Optional but recommended for explorer)
# ============================================================
txindex=1                           # Enable transaction index (required for explorer)
addressindex=1                      # Enable address index (required for address lookup)
timestampindex=1                    # Enable timestamp index (for time-based queries)
spentindex=1                        # Enable spent index (for UTXO tracking)

